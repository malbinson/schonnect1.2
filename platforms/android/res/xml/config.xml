<?xml version='1.0' encoding='utf-8'?>
<widget id="net.berkeleyschools.schonnect" version="1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="DatePickerPlugin">
        <param name="android-package" value="com.plugin.datepicker.DatePickerPlugin" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <name>BHS Connect</name>
    <description>
        A tool to keep the Berkleley High Community informed 
    </description>
    <author email="mattalbinson@berkeley.net" href="http://bhs.berkeleyschools.net">
        Matt Albinson, Michael Remediakis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <android-versionCode>1.2</android-versionCode>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon src="res/icon.png" />
    <splash height="480" src="res/splash.png" width="320" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="android-targetSdkVersion" value="21" />
</widget>
